@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">    
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner1.png" alt="ASP.NET" class="img-responsive" style="width:100%;height:400px;" />
            <div class="carousel-caption" role="option">
                <p style="color:#000000">
                    A demo application to demonstrate Docker container running ASP.NET Core application.
                </p>
            </div>
        </div>     
    </div>   
</div>

<div class="row">
    <div class="col-md-3">
        <h2>Application</h2>
        <ul>
            <li>Sample pages using ASP.NET Core Razor Pages</li>
            <li>Theming using <a href="https://bootswatch.com/4/united/bootstrap.min.css">Bootswatch</a></li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Source Code</h2>
        <ul>
            <li>Source code at <a href="https://github.com/SinghChandrabhan/DockerSamples">github</a>.</li>            
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Docke Image</h2>
        <ul>
            <li>Docker image at <a href="https://hub.docker.com/r/chandrabhan/">Docker-Hub</a>.</li>
            <li>More about <a href="https://docker.io/">Docker</a>.</li>
        </ul>
    </div>    
</div>
